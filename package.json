{
  "name": "touhou-card-game-nodejs",
  "version": "1.0.0",
  "description": "Touhou Card Game is a web-based online card game platform which uses characters from Touhou Project.",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "test": "eslint . && nyc --all --reporter=html --reporter=text mocha --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "jsdoc": "jsdoc src -r -d docs",
    "serve-coverage": "http-server coverage -c-1",
    "serve-docs": "http-server docs -c-1",
    "start": "node src/index.js",
    "debug": "nodemon src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DotLab/touhou-card-game-nodejs.git"
  },
  "keywords": [
    "touhou",
    "card",
    "game",
    "nodejs"
  ],
  "author": "Kailang Fu",
  "license": "CC-BY-NC-SA-4.0",
  "bugs": {
    "url": "https://github.com/DotLab/touhou-card-game-nodejs/issues"
  },
  "homepage": "https://github.com/DotLab/touhou-card-game-nodejs#readme",
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint": "^5.12.1",
    "eslint-config-google": "^0.11.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run jsdoc",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "chai": "^4.2.0",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "mongoose": "^5.4.9",
    "nodemon": "^1.18.9",
    "socket.io": "^2.2.0"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/index.js"
    ]
  }
}
